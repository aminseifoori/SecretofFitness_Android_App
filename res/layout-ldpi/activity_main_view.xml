<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".MainView"
    android:id="@+id/RootView"  >
    
    	<TextView
    	    android:id="@+id/txtrecipe"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:layout_alignLeft="@+id/chkfav"
    	    android:layout_below="@+id/chkfav"
    	    android:layout_marginTop="10dp"
    	    android:gravity="top|right"
    	    android:scrollbars="vertical"
    	    android:text="TextView"
    	    android:textColor="#000000"
    	    android:textSize="16sp" />

    	<TextView
    	    android:id="@+id/txtname"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_above="@+id/txtrecipe"
    	    android:layout_alignRight="@+id/txtrecipe"
    	    android:gravity="top|right"
    	    android:text="TextView"
    	    android:textColor="#0f0fff"
    	    android:textSize="16sp"
    	    android:textStyle="bold" />

    	<CheckBox
    	    android:id="@+id/chkfav"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignParentLeft="true"
    	    android:layout_below="@+id/imgview"
    	    android:layout_marginLeft="10dp"
    	    android:layout_marginTop="15dp"
    	    android:button="@drawable/customdrawablecheckbox" />

    	<ImageButton
    	    android:id="@+id/btnmines"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_above="@+id/chkfav"
    	    android:layout_alignParentRight="true"
    	    android:background="@android:color/transparent"
    	    android:src="@drawable/mines" />

    	<ImageButton
    	    android:id="@+id/btnplus"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_alignRight="@+id/imgview"
    	    android:layout_alignTop="@+id/imgview"
    	    android:background="@android:color/transparent"
    	    android:src="@drawable/plus" />

    	<ImageView
    	    android:id="@+id/imgview"
    	    android:layout_width="fill_parent"
    	    android:layout_height="100dp"
    	    android:layout_alignRight="@+id/btnmines"
    	    android:layout_marginTop="10dp"
    	    android:src="@drawable/f1"
    	    android:textAlignment="center" />

</RelativeLayout>
